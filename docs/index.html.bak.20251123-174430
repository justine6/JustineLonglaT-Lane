  <!-- Search Script (unchanged) -->
  <!-- ============================= -->
  <script>
    const input = document.getElementById("docs-search");
    const list = document.getElementById("docs-list");
    const empty = document.getElementById("docs-empty");

    const items = [
      { title: "Architecture", url: "architecture.md", keywords: "design infra architecture system" },
      { title: "CI/CD", url: "ci-cd.md", keywords: "pipeline github actions automation deploy" },
      { title: "Developer Utilities", url: "developer-utilities.md", keywords: "tools scripts productivity" },
      { title: "PR Text Generator", url: "PR_TEXT.md", keywords: "pull request template automation" },
      { title: "Cal Integration", url: "cal-integration-with-hero.md", keywords: "cal.com embed scheduling" },
      { title: "README Consistency", url: "readme-consistency.md", keywords: "documentation rules consistency" }
    ];

    function renderList(filter = "") {
      list.innerHTML = "";
      let visible = 0;

      items.forEach(item => {
        const text = item.title.toLowerCase();
        const kw = item.keywords.toLowerCase();
        const q = filter.toLowerCase();

        const show = !q || text.includes(q) || kw.includes(q);

        if (show) {
          visible++;
          const li = document.createElement("li");
          li.innerHTML = `<a href="${item.url}">${item.title}</a>`;
          list.appendChild(li);
        }
      });

      empty.style.display = visible === 0 ? "" : "none";
    }

    input.addEventListener("input", () => {
      renderList(input.value);
    });

    renderList();
  </script>

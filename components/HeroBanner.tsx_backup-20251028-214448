"use client";

import { useEffect, useState } from "react";
import Image from "next/image";
import Link from "next/link";

export default function HeroBanner() {
  const [ready, setReady] = useState(false);
  useEffect(() => {
    const timer = setTimeout(() => setReady(true), 50);
    return () => clearTimeout(timer);
  }, []);

  return (
    <section
      className={[
        "relative isolate overflow-hidden",
        "transition-opacity duration-700 ease-out",
        ready ? "opacity-100" : "opacity-0",
      ].join(" ")}
    >
      {/* Background Image */}
      <div className="relative w-full h-[48svh] sm:h-[60svh] md:h-[72svh]">
        <Image
          src="/brand/justine-banner.png"
          alt="Justine Longla T. - Solutions Architect & DevSecOps Engineer"
          fill
          priority
          className="object-cover object-center"
        />
      </div>

      {/* Overlay Text */}
      <div className="absolute inset-0 flex flex-col items-center justify-center text-center px-4">
        <h1 className="text-3xl sm:text-5xl md:text-6xl font-bold text-white drop-shadow-lg">
          Cloud Confidence. Delivered.
        </h1>
        <p className="mt-3 text-base sm:text-lg md:text-xl text-gray-100 drop-shadow">
          Secure, scalable AWS and DevSecOps solutions engineered for sustainability.
        </p>

        <div className="mt-6 flex gap-4">
          <Link
            href="/resume"
            className="rounded-lg bg-white/90 text-gray-900 px-4 py-2 hover:bg-white transition font-medium"
          >
            View Résumé
          </Link>
          <Link
            href="/docs/jutellane-brochure.pdf"
            className="rounded-lg bg-emerald-600/90 text-white px-4 py-2 hover:bg-emerald-500 transition font-medium"
          >
            Download Brochure
          </Link>
        </div>
      </div>
    </section>
  );
}
